<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="odoo_studio_community.SafeKanbanRecord" t-inherit="web.KanbanRecord">
  <xpath expr="//t[@t-call]" position="attributes">
    <attribute name="t-if">!studioHasError</attribute>
  </xpath>
  <xpath expr="//t[@t-call]" position="after">
    <div t-else="">Preview is not available</div>
  </xpath>
</t>

<t t-name="odoo_studio_community.SafeKanbanRecordEditor" t-inherit="odoo_studio_community.SafeKanbanRecord" >
  <xpath expr="./div" position="attributes">
    <attribute name="t-on-click.capture">onGlobalClickCapture</attribute>
  </xpath>
</t>

<t t-name="odoo_studio_community.KanbanEditorRecord.Dropdown" t-inherit="web.Dropdown">
  <xpath expr="./div" position="attributes">
    <attribute name="t-on-click">(ev) => env.config.onNodeClicked({target: this.rootRef.el, xpath: props.studioXpath})</attribute>
  </xpath>
</t>

<t t-name="odoo_studio_community.KanbanEditorRecord.AvatarPlaceholder" owl="1">
  <div class="oe_kanban_bottom_right" >
    <span class="oe_kanban_avatar">
        <i class="fa fa-user"/>
    </span>
  </div>
</t>

</templates>
